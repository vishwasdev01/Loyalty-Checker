<h1>Rewards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.name %></td>
        <td><%= reward.description %></td>
        <td><%= link_to 'Show', user_reward_path(@user, reward) %></td>
        <td><%= link_to 'Edit', edit_user_reward_path(@user, reward) %></td>
        <td><%= link_to 'Destroy', [reward.user, reward], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reward', new_user_reward_path(@user) %>
